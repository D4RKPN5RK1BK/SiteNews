@using SiteNews.sakila
@model News
@{
    Layout = "_Layout";
}

<div class="col-lg-8">
    <div class="row">
        <div class="col-sm-6">
            @Model.Data
        </div>
        <div class="col-sm-6">
            @Model.NameCategory
        </div>
    </div>
    <h2>@Model.NameShort</h2>
    <hr/>
    <h4>@Model.NameLong</h4>
    <hr/>
    @Html.Raw(Model.Text)
    <hr>
    <div class="my-2">
        <a asp-controller="News" asp-action="Update" asp-route-id="@Model.IdNews" class="btn btn-link">Редактировать</a>
        <a asp-controller="News" asp-action="Confirm" asp-route-id="@Model.IdNews" class="btn btn-link">Рассмотрение</a>
        <a asp-controller="News" asp-action="Index" class="btn btn-link">Вернуться</a>
    </div>
    
</div>

